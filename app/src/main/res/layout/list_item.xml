<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_display_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:contentDescription="@string/image_content_description"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/name_display_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/price_display_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#D50000"
                android:textSize="12sp"
                android:textStyle="italic"
                app:fontFamily="sans-serif" />
        </LinearLayout>

        <TextView
            android:id="@+id/model_no_display_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textColor="#757575"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/quantity_display_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textColor="#558B2F"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/sale_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:contentDescription="@string/sale_button_content_description"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/shop_icon"
        android:tint="#3E2723"
        app:backgroundTint="#C8E6C9" />
</LinearLayout>